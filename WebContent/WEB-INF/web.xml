<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <servlet>
    <servlet-name>qna</servlet-name>
    <servlet-class>com.ede.controller.QnaController</servlet-class>
    <init-param>
      <param-name>properties</param-name>
      <param-value>qna.properties</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>qna</servlet-name>
    <url-pattern>*.qna</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>notice</servlet-name>
    <servlet-class>com.ede.controller.NoticeController</servlet-class>
    <init-param>
      <param-name>properties</param-name>
      <param-value>notice.properties</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>notice</servlet-name>
    <url-pattern>*.notice</url-pattern>
  </servlet-mapping>
  <resource-ref>
    <res-ref-name>jdbc/user04</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <filter>
    <filter-name>encording</filter-name>
    <filter-class>com.ede.filter.Encording</filter-class>
    <init-param>
      <param-name>enc</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encording</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>product</servlet-name>
    <servlet-class>com.ede.controller.ProductController</servlet-class>
    <init-param>
    	<param-name>property</param-name>
    	<param-value>product.properties</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>product</servlet-name>
    <url-pattern>*.product</url-pattern>
  </servlet-mapping>


 
  <servlet>
  	<servlet-name>member</servlet-name>
  	<servlet-class>com.ede.controller.MemberController</servlet-class>
  	<init-param>
  		<param-name>properties</param-name>
  		<param-value>member.property</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>member</servlet-name>
  	<url-pattern>*.member</url-pattern>
  </servlet-mapping>
  
</web-app>